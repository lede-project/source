 	if (ehci_dev)
 		platform_device_unregister(ehci_dev);
+	if (xhci_dev)
+		platform_device_unregister(xhci_dev);
 
 	bcma_core_disable(dev, 0);
 }
@@ -416,6 +591,7 @@ static int bcma_hcd_resume(struct bcma_d
