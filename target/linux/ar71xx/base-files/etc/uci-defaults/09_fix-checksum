#!/bin/sh
#
# Copyright (C) 2010 OpenWrt.org
#

. /lib/functions.sh

board=$(board_name)

fixtrx() {
	mtd -o 32 fixtrx firmware
}

fixwrgg() {
	local kernel_size=$(sed -n 's/mtd[0-9]*: \([0-9a-f]*\).*"kernel".*/\1/p' /proc/mtd)

	[ "$kernel_size" ] && mtd -c 0x$kernel_size fixwrgg firmware
}

case "$board" in
mynet-rext |\
wrt160nl)
	fixtrx
	;;
dap-2695-a1)
	fixwrgg
	;;
esac
