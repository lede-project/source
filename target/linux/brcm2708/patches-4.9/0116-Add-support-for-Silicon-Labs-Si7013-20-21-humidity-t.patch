From d7a7355799204dc94d323d8e58ff6d2d3296e764 Mon Sep 17 00:00:00 2001
From: Alex Tucker <alex@floop.org.uk>
Date: Tue, 13 Dec 2016 19:50:18 +0000
Subject: [PATCH] Add support for Silicon Labs Si7013/20/21
 humidity/temperature sensor.

---
 arch/arm/boot/dts/overlays/i2c-sensor-overlay.dts | 49 +++++++++++++----------
 1 file changed, 28 insertions(+), 21 deletions(-)

--- a/arch/arm/boot/dts/overlays/i2c-sensor-overlay.dts
+++ b/arch/arm/boot/dts/overlays/i2c-sensor-overlay.dts
@@ -1,34 +1,41 @@
-// Definitions for a few digital barometric pressure and temperature sensors
+// Definitions for I2C based sensors using the Industrial IO interface.
 /dts-v1/;
 /plugin/;
 
 / {
-        compatible = "brcm,bcm2708";
+	compatible = "brcm,bcm2708";
 
-        fragment@0 {
-                target = <&i2c_arm>;
-                __overlay__ {
-                        #address-cells = <1>;
-                        #size-cells = <0>;
-                        status = "okay";
-
-                        bmp085: bmp085@77 {
-                                compatible = "bosch,bmp085";
-                                reg = <0x77>;
-                                default-oversampling = <3>;
-                                status = "disable";
-                        };
-
-                        bmp280: bmp280@76 {
-                                compatible = "bosch,bmp280";
-                                reg = <0x76>;
-                                status = "disable";
-                        };
-                };
-        };
+	fragment@0 {
+		target = <&i2c_arm>;
+		__overlay__ {
+			#address-cells = <1>;
+			#size-cells = <0>;
+			status = "okay";
+
+			bmp085: bmp085@77 {
+				compatible = "bosch,bmp085";
+				reg = <0x77>;
+				default-oversampling = <3>;
+				status = "disable";
+			};
+
+			bmp280: bmp280@76 {
+				compatible = "bosch,bmp280";
+				reg = <0x76>;
+				status = "disable";
+			};
+
+			si7020: si7020@40 {
+				compatible = "si7020";
+				reg = <0x40>;
+				status = "disable";
+			};
+		};
+	};
 
 	__overrides__ {
 		bmp085 = <&bmp085>,"status";
 		bmp280 = <&bmp280>,"status";
+		si7020 = <&si7020>,"status";
 	};
 };
