#!/bin/sh

BOOTPART=/dev/sda1

move_config() {
	. /lib/functions.sh

	[ "$(board_name)" = "mbl" ] || return
	if [ -b $BOOTPART ]; then
		mkdir -p /boot
		mount -t ext4 -o rw,noatime $BOOTPART /boot
		[ -f /boot/sysupgrade.tgz ] && mv -f /boot/sysupgrade.tgz /
	fi
}

boot_hook_add preinit_mount_root move_config
