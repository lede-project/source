#!/bin/sh

BOOTPART=/dev/sda1

move_config() {
	. /lib/functions.sh

	case "$(board_name)" in
	wd,mybooklive|\
	wd,mybooklive-duo)
		if [ -b $BOOTPART ]; then
			mkdir -p /boot
			mount -t ext4 -o rw,noatime $BOOTPART /boot
			[ -f /boot/sysupgrade.tgz ] && mv -f /boot/sysupgrade.tgz /
		fi
		;;
	*)
		;;
	esac
}

boot_hook_add preinit_mount_root move_config
