menu "Target Images"

	menuconfig IMAGE_ROOTFS_INITRAMFS
		bool "ramdisk"
		default y if ( USES_INITRAMFS && !IB_NO_CORE_IMAGE )
		help
		  Embed the root filesystem into the kernel (initramfs).

		choice
			prompt "Compression"
			default IMAGE_INITRAMFS_COMPRESSION_LZMA if TARGET_ar71xx
			default IMAGE_INITRAMFS_COMPRESSION_LZMA if TARGET_ramips
			default IMAGE_INITRAMFS_COMPRESSION_NONE
			depends on IMAGE_ROOTFS_INITRAMFS
			help
			  Select ramdisk compression.

			config IMAGE_INITRAMFS_COMPRESSION_NONE
				bool "none"

			config IMAGE_INITRAMFS_COMPRESSION_GZIP
				bool "gzip"

			config IMAGE_INITRAMFS_COMPRESSION_BZIP2
				bool "bzip2"

			config IMAGE_INITRAMFS_COMPRESSION_LZMA
				bool "lzma"

			config IMAGE_INITRAMFS_COMPRESSION_LZO
				bool "lzo"

			config IMAGE_INITRAMFS_COMPRESSION_LZ4
				bool "lz4"

			config IMAGE_INITRAMFS_COMPRESSION_XZ
				bool "xz"
		endchoice

		config EXTERNAL_CPIO
			string
			prompt "Use external cpio" if IMAGE_ROOTFS_INITRAMFS
			default ""
			help
			  Kernel uses specified external cpio as INITRAMFS_SOURCE.

	comment "Root filesystem archives"

	config IMAGE_ROOTFS_CPIOGZ
		bool "cpio.gz"
		default y if ( USES_CPIOGZ && !IB_NO_CORE_IMAGE )
		help
		  Build a compressed cpio archive of the root filesystem.

	config IMAGE_ROOTFS_TARGZ
		bool "tar.gz"
		default y if ( USES_TARGZ && !IB_NO_CORE_IMAGE )
		help
		  Build a compressed tar archive of the root filesystem.

	comment "Root filesystem images"

	menuconfig IMAGE_ROOTFS_EXT4FS
		bool "ext4"
		default y if ( USES_EXT4 && !IB_NO_CORE_IMAGE )
		help
		  Build an ext4 root filesystem.

		config IMAGE_EXT4_MAXINODE
			int "Maximum number of inodes in root filesystem"
			depends on IMAGE_ROOTFS_EXT4FS
			default 6000
			help
			  Select the maximum number of inodes in the root filesystem.

		config IMAGE_EXT4_RESERVED_PCT
			int "Percentage of reserved blocks in root filesystem"
			depends on IMAGE_ROOTFS_EXT4FS
			default 0
			help
			  Select the percentage of reserved blocks in the root filesystem.

		choice
			prompt "Root filesystem block size"
			default IMAGE_EXT4_BLOCKSIZE_4K
			depends on IMAGE_ROOTFS_EXT4FS
			help
			  Select the block size of the root filesystem.

			config IMAGE_EXT4_BLOCKSIZE_4K
				bool "4k"

			config IMAGE_EXT4_BLOCKSIZE_2K
				bool "2k"

			config IMAGE_EXT4_BLOCKSIZE_1K
				bool "1k"
		endchoice

		config IMAGE_EXT4_BLOCKSIZE
			int
			default 4096 if IMAGE_EXT4_BLOCKSIZE_4K
			default 2048 if IMAGE_EXT4_BLOCKSIZE_2K
			default 1024 if IMAGE_EXT4_BLOCKSIZE_1K
			depends on IMAGE_ROOTFS_EXT4FS

		config IMAGE_EXT4_JOURNAL
			bool "Create a journaling filesystem"
			depends on IMAGE_ROOTFS_EXT4FS
			default n
			help
			  Create an ext4 filesystem with a journal.

	config IMAGE_ROOTFS_ISO
		bool "iso"
		default n
		depends on TARGET_x86_generic
		help
		  Create a bootable ISO image.

	config IMAGE_ROOTFS_JFFS2
		bool "jffs2"
		default y if ( USES_JFFS2 && !IB_NO_CORE_IMAGE )
		help
		  Build a JFFS2 root filesystem.

	config IMAGE_ROOTFS_JFFS2_NAND
		bool "jffs2 for NAND"
		default y if ( USES_JFFS2_NAND && !IB_NO_CORE_IMAGE )
		depends on USES_JFFS2_NAND
		help
		  Build a JFFS2 root filesystem for NAND flash.

	menuconfig IMAGE_ROOTFS_SQUASHFS
		bool "squashfs"
		default y if ( USES_SQUASHFS && !IB_NO_CORE_IMAGE )
		help
		  Build a squashfs-lzma root filesystem.

		config IMAGE_SQUASHFS_BLOCK_SIZE
			int "Block size (in KiB)"
			depends on IMAGE_ROOTFS_SQUASHFS
			default 64 if LOW_MEMORY_FOOTPRINT
			default 256

	menuconfig IMAGE_ROOTFS_UBIFS
		bool "ubifs"
		default y if ( USES_UBIFS && !IB_NO_CORE_IMAGE )
		depends on USES_UBIFS
		help
		  Build a UBIFS root filesystem.

		choice
			prompt "compression"
			default IMAGE_UBIFS_COMPRESSION_ZLIB
			depends on IMAGE_ROOTFS_UBIFS
			help
			  Select compression type

			config IMAGE_UBIFS_COMPRESSION_NONE
				bool "none"

			config IMAGE_UBIFS_COMPRESSION_LZO
				bool "lzo"

			config IMAGE_UBIFS_COMPRESSION_ZLIB
				bool "zlib"
		endchoice

		config IMAGE_UBIFS_FREE_SPACE_FIXUP
			bool "free space fixup" if IMAGE_ROOTFS_UBIFS
			default y
			help
			  The filesystem free space has to be fixed up on first mount.

		config IMAGE_UBIFS_JOURNAL_SIZE
			string
			prompt "journal size" if IMAGE_ROOTFS_UBIFS
			default ""

	config GRUB_IMAGES
		bool "Build GRUB images (Linux x86 or x86_64 host only)"
		depends on TARGET_x86
		depends on IMAGE_ROOTFS_EXT4FS || IMAGE_ROOTFS_ISO || IMAGE_ROOTFS_JFFS2 || IMAGE_ROOTFS_SQUASHFS
		select PACKAGE_grub2
		default y if !IB_NO_CORE_IMAGE

	config GRUB_CONSOLE
		bool "Use Console Terminal (in addition to Serial)"
		depends on GRUB_IMAGES
		default n if (TARGET_x86_generic_Soekris45xx || TARGET_x86_generic_Soekris48xx || TARGET_x86_net5501 || TARGET_x86_geos || TARGET_x86_alix2)
		default y

	config GRUB_SERIAL
		string "Serial port device"
		depends on GRUB_IMAGES
		default "hvc0" if TARGET_x86_xen_domu
		default "ttyS0" if ! TARGET_x86_xen_domu

	config GRUB_BAUDRATE
		int "Serial port baud rate"
		depends on GRUB_IMAGES
		default 38400 if TARGET_x86_generic
		default 38400 if TARGET_x86_geode
		default 115200

	config GRUB_BOOTOPTS
		string "Extra kernel boot options"
		depends on GRUB_IMAGES
		default "xencons=hvc" if TARGET_x86_xen_domu
		help
		  If you don't know, just leave it blank.

	config GRUB_TIMEOUT
		string "Seconds to wait before booting the default entry"
		depends on GRUB_IMAGES
		default "5"
		help
		  If you don't know, 5 seconds is a reasonable default.

	config VDI_IMAGES
		bool "Build VirtualBox image files (VDI)"
		depends on TARGET_x86 || TARGET_x86_64
		select GRUB_IMAGES
		select IMAGE_IMAGES_PAD
		select PACKAGE_kmod-e1000

	config VMDK_IMAGES
		bool "Build VMware image files (VMDK)"
		depends on TARGET_x86 || TARGET_x86_64
		select GRUB_IMAGES
		select IMAGE_IMAGES_PAD
		select PACKAGE_kmod-e1000

	config IMAGE_IMAGES_PAD
		bool "Pad images to filesystem size (for JFFS2)"
		depends on GRUB_IMAGES

	config IMAGE_IMAGES_GZIP
		bool "GZip images"
		depends on IMAGE_IMAGES_PAD || IMAGE_ROOTFS_EXT4FS
		default y if !IB_NO_CORE_IMAGE

	comment "Image Options"

	source "target/linux/*/image/Config.in"

	config IMAGE_KERNEL_PARTSIZE
		int "Kernel partition size (in MB)"
		depends on GRUB_IMAGES
		default 4

	config IMAGE_ROOTFS_PARTSIZE
		int "Root filesystem partition size (in MB)"
		depends on GRUB_IMAGES || IMAGE_ROOTFS_EXT4FS || TARGET_rb532
		default 48
		help
		  Select the root filesystem partition size.

	config IMAGE_ROOTFS_PARTNAME
		string "Root partition on target device"
		depends on GRUB_IMAGES
		help
		  Override the root partition on the final device. If left empty,
		  it will be mounted by PARTUUID which makes the kernel find the
		  appropriate disk automatically.


	menuconfig IMAGE_ROOTFS_INCLUDE_KERNEL
		bool "Include kernel in root filesystem"
		depends on IMAGE_ROOTFS_UBIFS || IMAGE_ROOTFS_EXT4FS
		default n
		help
		  Include the kernel image in the rootfs. Typically, the image is placed
		  below /boot.

		config IMAGE_ROOTFS_INCLUDE_UIMAGE
			bool "include uImage" if IMAGE_ROOTFS_INCLUDE_KERNEL
			default y
			help
			  This option might not apply to all targets. Make sure
			  to check target/linux/<your_target>/image/Makefile to
			  see if this option will have any effect.

		config IMAGE_ROOTFS_INCLUDE_ZIMAGE
			bool "include zImage" if IMAGE_ROOTFS_INCLUDE_KERNEL
			default y
			help
			  This option might not apply to all targets. Make sure
			  to check target/linux/<your_target>/image/Makefile to
			  see if this option will have any effect.

		config IMAGE_ROOTFS_INCLUDE_FIT
			bool "include FIT" if IMAGE_ROOTFS_INCLUDE_KERNEL
			default y
			help
			  This option might not apply to all targets. Make sure
			  to check target/linux/<your_target>/image/Makefile to
			  see if this option will have any effect.

	config IMAGE_ROOTFS_INCLUDE_DTB
		bool "Include DTB in root filesystem"
		depends on USES_DEVICETREE && (IMAGE_ROOTFS_UBIFS || IMAGE_ROOTFS_EXT4FS)
		default n
		help
		  Include the device tree blob file(s) in the rootfs. Typically the DTBs
		  are placed below /boot.

endmenu
